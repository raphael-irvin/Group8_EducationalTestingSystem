<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- Root of the Sign Up screen -->

<AnchorPane prefHeight="450.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/25" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group8.ets.controller.SignUpController">

    <children>

        <!-- Email field -->
        <VBox layoutX="97.0" layoutY="138.0" prefHeight="32.0" prefWidth="250.0">
            <children>
                <TextField fx:id="emailField" promptText="Email" />
            </children>
        </VBox>

        <!-- Password field -->
        <VBox layoutX="97.0" layoutY="170.0" prefHeight="32.0" prefWidth="250.0">
            <children>
                <PasswordField fx:id="passwordField" promptText="Password" />
            </children>
        </VBox>

        <!-- Username field -->
        <VBox layoutX="97.0" layoutY="209.0" prefHeight="32.0" prefWidth="250.0">
            <children>
                <TextField fx:id="nameField" promptText="Username" />
            </children>
        </VBox>

        <!-- SignUp button -->
        <VBox layoutX="196.0" layoutY="249.0" prefHeight="32.0" prefWidth="58.0">
            <children>
                <Button onAction="#handleSignUp" prefWidth="60.0" text="SignUp" />
            </children>
        </VBox>

        <!-- Back to login -->
        <VBox layoutX="134.0" layoutY="292.0" prefHeight="32.0" prefWidth="178.0">
            <children>
                <Hyperlink onAction="#handleGoToLogin" prefHeight="24.0" prefWidth="174.0" text="Login with existing account" textFill="#282626" />
            </children>
         <padding>
            <Insets left="10.0" />
         </padding>
        </VBox>

    </children>
</AnchorPane>
