<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="550.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group8.ets.controller.HomeController">

    <children>

        <!-- top bar -->
        <HBox alignment="CENTER_LEFT" prefHeight="60.0" prefWidth="550.0" spacing="60.0"
              style="-fx-padding: 10; -fx-border-color: #000000; -fx-border-width: 0.5; -fx-background-color: #f8f8f8;"
              AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">

            <children>
                <!-- Quiz tab (current) -->
                <Label prefWidth="60.0" text="Quiz" textFill="#1f8b2c">
                    <font><Font size="14.0"/></font>
                    <HBox.margin><Insets left="50.0"/></HBox.margin>
                    <padding><Insets left="10.0"/></padding>
                </Label>

                <!-- Profile tab -->
                <Button mnemonicParsing="false" onAction="#handleGoToProfile"
                        style="-fx-background-color: transparent; -fx-border-color: transparent;"
                        text="Profile">
                    <font><Font size="14.0"/></font>
                    <HBox.margin><Insets left="20.0"/></HBox.margin>
                    <padding><Insets left="10.0"/></padding>
                </Button>

                <!-- Sign out -->
                <Button mnemonicParsing="false" onAction="#handleSignOut"
                        style="-fx-border-color: #b0b0b0; -fx-background-color: white;"
                        text="Sign out" textFill="#bc1818">
                    <font><Font size="14.0"/></font>
                    <HBox.margin><Insets left="105.0"/></HBox.margin>
                </Button>
            </children>
        </HBox>

        <!-- left: topics list inside ScrollPane (زي Quiz بالضبط) -->
        <ScrollPane fitToWidth="true"
                    prefHeight="390.0" prefWidth="361.0"
                    style="-fx-border-color: #cccccc; -fx-border-width: 0.5; -fx-background-color: white;"
                    AnchorPane.leftAnchor="0.0"
                    AnchorPane.topAnchor="60.0">

            <content>
                <VBox fx:id="topicsContainer"
                      spacing="10.0">
                    <padding>
                        <Insets bottom="10.0" left="22.0" right="10.0" top="20.0"/>
                    </padding>
                    <!-- الأزرار راح تنضاف من HomeController باستخدام MockTopics -->
                </VBox>
            </content>
        </ScrollPane>

        <!-- right blank area -->
        <HBox prefHeight="390.0" prefWidth="190.0"
              style="-fx-border-color: #000000; -fx-border-width: 0.5; -fx-background-color: white;"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="60.0"/>
    </children>
</AnchorPane>
