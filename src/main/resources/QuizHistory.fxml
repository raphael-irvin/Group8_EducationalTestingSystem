<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="550.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group8.ets.controllers.QuizHistoryController">

    <children>

        <!-- Top bar: Quiz | Profile | Sign out -->
        <HBox alignment="CENTER_LEFT"
              prefHeight="60.0" prefWidth="550.0"
              spacing="60.0"
              style="-fx-padding: 10; -fx-border-color: #000; -fx-border-width: 0.5; -fx-background-color: #f0f0f0;"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">

            <children>
                <Button onAction="#handleGoToHome"
                        prefWidth="55.0"
                        style="-fx-background-color: transparent;"
                        text="Quiz">
                    <HBox.margin>
                        <Insets left="50.0" />
                    </HBox.margin>
                </Button>

                <Button onAction="#handleGoToProfile"
                        prefWidth="60.0"
                        style="-fx-background-color: transparent;"
                        text="Profile" textFill="#35cc0f">
                    <HBox.margin>
                        <Insets left="40.0" />
                    </HBox.margin>
                </Button>

                <Button onAction="#handleSignOut"
                        style="-fx-border-color: #b0b0b0; -fx-background-color: white;"
                        text="Sign out" textFill="#bc1818">
                    <HBox.margin>
                        <Insets left="100.0" />
                    </HBox.margin>
                </Button>
            </children>
        </HBox>

        <!-- Left: profile name + history list -->
        <VBox prefWidth="380.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.topAnchor="60.0"
              AnchorPane.bottomAnchor="0.0">

            <!-- Profile name box -->
            <VBox prefHeight="150.0" prefWidth="380.0"
                  spacing="20.0"
                  style="-fx-background-color: white; -fx-border-color: black; -fx-border-width: 1;">
                <padding>
                    <Insets left="60.0" top="40.0" right="10.0" bottom="20.0" />
                </padding>
                <children>
                    <Label fx:id="profileNameLabel"
                           prefWidth="259.0"
                           style="-fx-background-color: #ffffff; -fx-padding: 5; -fx-border-color: #000; -fx-border-width: 0.7;"
                           text="Profile Name">
                        <font><Font size="18.0" /></font>
                    </Label>
                </children>
            </VBox>

            <!-- History list inside ScrollPane -->
            <ScrollPane fitToWidth="true"
                        prefHeight="260.0"
                        style="-fx-border-color: #000; -fx-border-width: 0.5;">
                <content>
                    <!-- Buttons for each topic attempt will be added here -->
                    <VBox fx:id="historyBox"
                          spacing="10.0"
                          style="-fx-padding: 20 10 20 20;" />
                </content>
            </ScrollPane>
        </VBox>

        <!-- Right side: difficulty + score + Review -->
        <VBox layoutX="380.0"
              prefHeight="390.0" prefWidth="170.0"
              spacing="15.0"
              style="-fx-border-color: #000; -fx-border-width: 0.5; -fx-background-color: white;"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="60.0"
              AnchorPane.bottomAnchor="0.0">

            <padding>
                <Insets left="20.0" top="30.0" right="20.0" bottom="20.0" />
            </padding>

            <children>
                <Label fx:id="difficultyLabel"
                       text="Difficulty: __"
                       textAlignment="CENTER">
                    <font><Font size="18.0" /></font>
                </Label>

                <Label fx:id="scoreLabel"
                       text="Score: __%"
                       textAlignment="CENTER">
                    <font><Font size="18.0" /></font>
                </Label>

                <Button onAction="#handleGoToResultQuiz"
                        prefWidth="80.0"
                        style="-fx-background-color: #e0e0e0; -fx-border-color: #d91414;"
                        text="Review" textFill="#d91414">
                    <VBox.margin>
                        <Insets top="40.0" left="25.0" />
                    </VBox.margin>
                </Button>
            </children>
        </VBox>

    </children>
</AnchorPane>
