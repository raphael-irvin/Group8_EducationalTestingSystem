<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.PasswordField?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.VBox?>

<!-- Login screen -->

<AnchorPane prefHeight="450.0" prefWidth="450.0" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="group8.ets.controller.LoginController">

    <children>

        <!-- Email field -->
        <VBox layoutX="100.0" layoutY="150.0" prefHeight="32.0" prefWidth="250.0">
            <children>
                <TextField fx:id="emailField" promptText="Email" />
            </children>
        </VBox>

        <!-- Password field -->
        <VBox layoutX="100.0" layoutY="190.0" prefHeight="32.0" prefWidth="250.0">
            <children>
                <PasswordField fx:id="passwordField" promptText="Password" />
            </children>
        </VBox>

        <!-- Login button -->
        <VBox layoutX="195.0" layoutY="235.0" prefHeight="32.0" prefWidth="60.0">
            <children>
                <!-- When clicked → handleLogin() in LoginController -->
                <Button mnemonicParsing="false" onAction="#handleLogin" prefWidth="60.0" text="Login" />
            </children>
        </VBox>

        <!-- Link to Sign Up -->
        <VBox layoutX="140.0" layoutY="280.0" prefHeight="32.0" prefWidth="180.0">
            <children>
                <!-- When clicked → handleGoToSignUp() in LoginController -->
                <Hyperlink onAction="#handleGoToSignUp" prefWidth="180.0" text="Don't have an account? Sign up" textFill="#100e0e">
               <padding>
                  <Insets right="6.0" />
               </padding></Hyperlink>
            </children>
        </VBox>

    </children>
</AnchorPane>
