<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<AnchorPane prefHeight="450.0" prefWidth="550.0"
            xmlns="http://javafx.com/javafx/25"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="group8.ets.controllers.ProfileController">

    <children>

        <!-- Top bar: Quiz | Profile | Sign out -->
        <HBox alignment="CENTER_LEFT"
              prefHeight="60.0" prefWidth="550.0"
              spacing="60.0"
              style="-fx-padding: 10; -fx-border-color: #000000; -fx-border-width: 0.5; -fx-background-color: #f8f8f8;"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="0.0">

            <children>
                <!-- Back to Home (Quiz tab) -->
                <Button mnemonicParsing="false"
                        onAction="#handleGoToHome"
                        prefHeight="20.0" prefWidth="65.0"
                        style="-fx-background-color: #f8f8f8;"
                        text="Quiz">
                    <font><Font size="14.0" /></font>
                    <HBox.margin><Insets left="40.0" /></HBox.margin>
                </Button>

                <!-- Current tab -->
                <Label text="Profile" textFill="#35cc0f">
                    <font><Font size="14.0" /></font>
                    <HBox.margin><Insets left="20.0" /></HBox.margin>
                </Label>

                <!-- Sign out -->
                <Button mnemonicParsing="false"
                        onAction="#handleSignOut"
                        style="-fx-border-color: #b0b0b0; -fx-background-color: white;"
                        text="Sign out" textFill="#bc1818">
                    <font><Font size="14.0" /></font>
                    <HBox.margin><Insets left="105.0" /></HBox.margin>
                </Button>
            </children>
        </HBox>

        <!-- Left side: profile info + topic history -->
        <VBox prefWidth="379.0"
              spacing="10.0"
              AnchorPane.leftAnchor="0.0"
              AnchorPane.topAnchor="60.0"
              AnchorPane.bottomAnchor="0.0">

            <!-- Profile name + average score -->
            <VBox prefHeight="200.0" prefWidth="379.0"
                  spacing="20.0"
                  style="-fx-background-color: #f2f2f2; -fx-border-color: #000000; -fx-border-width: 0.5;">
                <padding>
                    <Insets left="50.0" top="40.0" right="10.0" bottom="20.0" />
                </padding>
                <children>
                    <Label fx:id="profileNameLabel"
                           prefHeight="32.0" prefWidth="259.0"
                           style="-fx-background-color: #ffffff; -fx-padding: 5; -fx-border-color: #d0d0d0; -fx-border-width: 0.7;"
                           text="Profile Name" />

                    <Label fx:id="avgScoreLabel"
                           prefHeight="32.0" prefWidth="259.0"
                           style="-fx-background-color: #ffffff; -fx-padding: 5; -fx-border-color: #d0d0d0; -fx-border-width: 0.7;"
                           text="Avg Score: __%" />
                </children>
            </VBox>

            <!-- Topic history list inside ScrollPane -->
            <ScrollPane fitToWidth="true"
                        prefHeight="220.0"
                        style="-fx-border-color: #cfcfcf; -fx-border-width: 0.7;">
                <content>
                    <!-- The controller will add one button per topic here -->
                    <VBox fx:id="topicsBox"
                          spacing="10.0"
                          style="-fx-padding: 15 10 15 22;" />
                </content>
            </ScrollPane>
        </VBox>

        <!-- Right blank area (same style as other pages) -->
        <HBox prefHeight="390.0" prefWidth="171.0"
              style="-fx-border-color: #000000; -fx-border-width: 0.7; -fx-background-color: white;"
              AnchorPane.rightAnchor="0.0"
              AnchorPane.topAnchor="60.0"
              AnchorPane.bottomAnchor="0.0" />

    </children>
</AnchorPane>
